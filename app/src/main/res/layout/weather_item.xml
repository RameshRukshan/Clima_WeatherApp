<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#161619"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/sec_view_reservation_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@drawable/bg_design"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/txt_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Time"
            android:textAlignment="center"
            android:textColor="#E91E63"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/txt_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temp â„ƒ"
            android:textAlignment="center"
            android:textColor="#161619"
            android:textSize="40dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="180dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/output_onlinegiftools" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/txt_humidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Humidity : 0.00%"
                    android:textAlignment="viewStart"
                    android:textColor="#161619"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txt_wind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wind : 0.00%"
                    android:textAlignment="viewStart"
                    android:textColor="#161619"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txt_press"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pressure : 0000"
                    android:textAlignment="viewStart"
                    android:textColor="#161619"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>